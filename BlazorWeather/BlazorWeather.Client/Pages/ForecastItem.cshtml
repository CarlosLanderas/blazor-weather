@using BlazorWeather.Shared

@foreach (var item in DailyWeather)
{
    <div class="forecast">
        <div class="forecast-header">
            <div class="day">@item.Day</div>
        </div> <!-- .forecast-header -->
        <div class="forecast-content">
            <div class="forecast-icon">
                <img src="images/icons/icon-3.svg" alt="" width=48>
            </div>
            <div class="degree">@item.MaximumTemperature<sup>o</sup> C</div>
            <small>@item.MinimumTemperature<sup>o</sup></small>
        </div>
    </div>
}

@functions {

    public WeatherDayDTO [] DailyWeather { get; set; }

}
